<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<div class="container my-3 p-3">
  <div class="row col-xs-12 justify-content-center my-2">
    <% if(successMessage) { %>
      <div class="alert alert-success border border-1 border-success font-weight-bold" role="alert"><%= successMessage %></div>
    <% } %>
    <% if(errorMessage) { %>
      <div class="alert alert-danger border border-1 border-danger font-weight-bold"><%= errorMessage %></div>
      <% } %>
    <div class="card col-xs-12 w-50 p-3">
      <div class="row justify-content-center p-2">
        <h3 class="font-weight-bold text-capitalize">recover your account</h3>
        <p>Enter the email address or username associated with your Aperture account.</p>
      </div>
      <!-- Form -->
      <div class="row justify-content-center p-2">
        <form action="/auth/user/password/reset" method="POST">
          <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">
          <!-- Input field -->
          <div class="form-group">
            <label for="info" class="font-weight-bold">Username or email</label>
            <input type="text" name="info" id="info" class="form-control" required>
          </div>
          <!-- buttons -->
          <div class="form-group">
            <button type="submit" class="btn btn-info font-weight-bold text-capitalize w-100">send email</button>
          </div>
        </form>
      </div>
      <!-- contact notice -->
      <div class="row justify-content-center text-center p-2">
        <h5 class="font-weight-bold text-capitalize">Don't remember your account details?</h5>
        <p>If you no longer recall the username or email address associated with your Aperture account, you will need to <a href="/contact">Contact Us</a> in order to restore access to your account.</p>
      </div>
    </div>
  </div>
  <hr class="my-5">
  <div class="row justify-content-center">&copy;&nbsp;Aperture&nbsp;<%= currentYear %>.&nbsp;All rights reserved.</div>
</div>
