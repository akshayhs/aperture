<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<div class="container my-3 p-3">
  <!-- Flash message notice -->
  <div class="row justify-content-center">
    <% if(error) {  %>
      <div class="alert alert-danger border border-1 border-danger font-weight-bold"><%= error %></div>
    <% } %>
  </div>
  <h1 class="text-center my-2 text-capitalize">reset your password</h1>
  <div class="row justify-content-center">
    <div class="card align-self-center w-50 p-5 border-secondary bg-light m-5">
      <form action="/auth/user/password/reset/<%= token %>/confirm?_method=PATCH" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="id" value="<%= id %>">
        <div class="form-group">
          <label class="font-weight-bold" for="password">Enter your new password</label>
          <input class="form-control" type="password" name="password" id="password" placeholder="Set a strong password" required>
        </div>
        <div class="form-group">
          <label for="c_password" class="font-weight-bold">Confirm your new password</label>
          <input class="form-control" type="password" name="c_password" id="c_password" placeholder="Confirm your password" required>
        </div>
        <div class="form-group">
          <button type="reset" class="btn btn-warning text-capitalize font-weight-bold">clear</button>
          <button type="submit" class="btn btn-info text-capitalize font-weight-bold">reset password</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>